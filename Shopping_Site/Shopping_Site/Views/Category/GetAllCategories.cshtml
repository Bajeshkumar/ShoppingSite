@model IEnumerable<Shopping_Site.Models.Category>
@{
    ViewData["Title"] = "GetAllCategories";
 }
<div class="container">
    <h3 class="display-4">All Category</h3>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="">
                    </svg>
                    <div class="card-body">
                        <h1 class="card-title">@item.Type</h1>
                        <p class="card-text">@item.Description</p>
                        <div class="" d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="Category/GetCategory" class="btn btn-sm btn-outline-secondry">view Details</a>
                            </div>
                            <small class="text-muted">@item.Name</small>
                        </div>                       
                    </div>
                    
                 </div>
            </div>
             
            
           }
   </div>
</div>